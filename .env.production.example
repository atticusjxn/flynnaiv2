# Flynn.ai v2 - Production Environment Variables
# Copy this file to set up your production environment

# ===========================================
# CORE APPLICATION
# ===========================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-production-domain.com
NEXT_PUBLIC_APP_NAME="Flynn.ai"

# ===========================================
# SUPABASE DATABASE & AUTHENTICATION  
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=your-production-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-supabase-service-role-key

# ===========================================
# TWILIO VOICE & SMS SERVICES
# ===========================================
TWILIO_ACCOUNT_SID=your-production-twilio-account-sid
TWILIO_AUTH_TOKEN=your-production-twilio-auth-token
TWILIO_PHONE_NUMBER=your-production-twilio-phone-number
TWILIO_WEBHOOK_SECRET=your-production-twilio-webhook-secret

# ===========================================
# OPENAI AI PROCESSING
# ===========================================
OPENAI_API_KEY=your-production-openai-api-key
OPENAI_ORGANIZATION_ID=your-production-openai-org-id

# ===========================================
# EMAIL SERVICES (RESEND)
# ===========================================
RESEND_API_KEY=your-production-resend-api-key
NEXT_PUBLIC_FROM_EMAIL=noreply@your-domain.com
NEXT_PUBLIC_SUPPORT_EMAIL=support@your-domain.com

# ===========================================
# STRIPE PAYMENT PROCESSING
# ===========================================
STRIPE_SECRET_KEY=your-production-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-production-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-production-stripe-webhook-secret

# ===========================================
# GOOGLE CALENDAR INTEGRATION
# ===========================================
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# ===========================================
# MICROSOFT OUTLOOK INTEGRATION
# ===========================================
MICROSOFT_CLIENT_ID=your-production-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-production-microsoft-client-secret

# ===========================================
# SECURITY & MONITORING
# ===========================================
JWT_SECRET=your-production-jwt-secret-256-bit-key
WEBHOOK_SECRET=your-production-webhook-verification-secret
NEXT_PUBLIC_SENTRY_DSN=your-production-sentry-dsn
SENTRY_AUTH_TOKEN=your-production-sentry-auth-token

# ===========================================
# PERFORMANCE & CACHING
# ===========================================
REDIS_URL=your-production-redis-connection-string
CLOUDINARY_CLOUD_NAME=your-production-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-production-cloudinary-api-key
CLOUDINARY_API_SECRET=your-production-cloudinary-api-secret

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
NEXT_PUBLIC_POSTHOG_KEY=your-production-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-production-ga4-id

# ===========================================
# FEATURE FLAGS & CONFIGURATION
# ===========================================
NEXT_PUBLIC_FEATURE_ANALYTICS=true
NEXT_PUBLIC_FEATURE_AI_PROCESSING=true
NEXT_PUBLIC_FEATURE_CALENDAR_SYNC=true
NEXT_PUBLIC_FEATURE_SMS_NOTIFICATIONS=true

# ===========================================
# INDUSTRY CONFIGURATIONS
# ===========================================
NEXT_PUBLIC_SUPPORTED_INDUSTRIES=plumbing,real_estate,legal,medical,sales,consulting
NEXT_PUBLIC_DEFAULT_INDUSTRY=plumbing

# ===========================================
# RATE LIMITING & QUOTAS
# ===========================================
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_AI_CALLS_PER_HOUR=100
RATE_LIMIT_WEBHOOK_PER_MINUTE=10

# ===========================================
# BACKUP & DISASTER RECOVERY
# ===========================================
BACKUP_STORAGE_URL=your-production-backup-storage-url
BACKUP_ENCRYPTION_KEY=your-production-backup-encryption-key

# ===========================================
# COMPLIANCE & AUDIT
# ===========================================
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for compliance
DATA_RETENTION_DAYS=365
HIPAA_COMPLIANCE_MODE=false

# ===========================================
# DEVELOPMENT & DEBUGGING (Production: false)
# ===========================================
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_VERBOSE_LOGGING=false
NEXT_PUBLIC_MOCK_AI_RESPONSES=false
NEXT_PUBLIC_SKIP_AUTH_IN_DEV=false