# Flynn.ai v2 Environment Variables
# Copy this file to .env.local and fill in your actual values

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Application Environment
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# ==============================================================================
# SUPABASE CONFIGURATION
# ==============================================================================

# Supabase Project Configuration
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase Service Role Key (Server-side only, keep secret)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database URLs (for migrations and direct access)
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# ==============================================================================
# OPENAI CONFIGURATION
# ==============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORGANIZATION=your-openai-organization-id

# AI Model Configuration
OPENAI_MODEL_GPT=gpt-4
OPENAI_MODEL_WHISPER=whisper-1

# AI Processing Settings
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.1
AI_TIMEOUT_MS=30000

# ==============================================================================
# TWILIO CONFIGURATION
# ==============================================================================

# Twilio Account Configuration
TWILIO_ACCOUNT_SID=ACyour-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Twilio Phone Numbers
TWILIO_PHONE_NUMBER=+1234567890

# Webhook Configuration
TWILIO_WEBHOOK_SECRET=your-twilio-webhook-secret
TWILIO_WEBHOOK_URL=https://your-domain.com/api/webhooks/twilio

# Twilio Voice Configuration
TWILIO_VOICE_URL=https://your-domain.com/api/webhooks/twilio/voice
TWILIO_STATUS_URL=https://your-domain.com/api/webhooks/twilio/status
TWILIO_RECORDING_URL=https://your-domain.com/api/webhooks/twilio/recording
TWILIO_TRANSCRIPTION_URL=https://your-domain.com/api/webhooks/twilio/transcription

# ==============================================================================
# EMAIL CONFIGURATION
# ==============================================================================

# Resend Configuration
RESEND_API_KEY=re_your-resend-api-key

# Email Domain Configuration
EMAIL_DOMAIN=your-domain.com
EMAIL_FROM_NAME=Flynn.ai
EMAIL_FROM_ADDRESS=noreply@your-domain.com
EMAIL_REPLY_TO=support@your-domain.com

# Email Template Configuration
EMAIL_PREVIEW_MODE=false
EMAIL_TEMPLATE_CACHE=true

# ==============================================================================
# GOOGLE CALENDAR INTEGRATION
# ==============================================================================

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-domain.com/api/auth/google/callback

# Google Calendar API
GOOGLE_CALENDAR_SCOPE=https://www.googleapis.com/auth/calendar

# ==============================================================================
# MICROSOFT OUTLOOK INTEGRATION
# ==============================================================================

# Microsoft Graph API Configuration
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-microsoft-tenant-id
MICROSOFT_REDIRECT_URI=https://your-domain.com/api/auth/microsoft/callback

# Microsoft Graph Scopes
MICROSOFT_GRAPH_SCOPE=https://graph.microsoft.com/calendars.readwrite

# ==============================================================================
# STRIPE CONFIGURATION (for subscription management)
# ==============================================================================

# Stripe API Keys
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Stripe Webhook Configuration
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Subscription Price IDs
STRIPE_BASIC_PRICE_ID=price_basic_monthly
STRIPE_PROFESSIONAL_PRICE_ID=price_professional_monthly
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRES_IN=7d

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_IV=your-16-character-iv-key

# API Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://your-domain.com

# ==============================================================================
# LOGGING AND MONITORING
# ==============================================================================

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring URLs
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
POSTHOG_KEY=your-posthog-key

# Application Insights (Optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# ==============================================================================
# WEBHOOK CONFIGURATION
# ==============================================================================

# Webhook Security
WEBHOOK_SECRET=your-webhook-secret-key

# External Webhook URLs (for client notifications)
CLIENT_WEBHOOK_URL=https://client-system.com/webhooks/flynn

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

# AI Features
ENABLE_AI_PROCESSING=true
ENABLE_REAL_TIME_TRANSCRIPTION=true
ENABLE_SENTIMENT_ANALYSIS=true

# Email Features
ENABLE_EMAIL_SENDING=true
ENABLE_EMAIL_TRACKING=true

# Calendar Features
ENABLE_GOOGLE_CALENDAR=true
ENABLE_OUTLOOK_CALENDAR=true
ENABLE_APPLE_CALENDAR=true

# Dashboard Features
ENABLE_REAL_TIME_UPDATES=true
ENABLE_BULK_OPERATIONS=true

# Industry Features
ENABLE_INDUSTRY_CONFIGURATIONS=true
ENABLE_CUSTOM_TERMINOLOGY=true

# ==============================================================================
# DEVELOPMENT CONFIGURATION
# ==============================================================================

# Development Tools
NEXT_TELEMETRY_DISABLED=1
ANALYZE=false

# Local Development URLs
NGROK_URL=https://your-ngrok-url.ngrok.io
LOCAL_SUPABASE_URL=http://localhost:54321
LOCAL_SUPABASE_ANON_KEY=your-local-supabase-anon-key

# Testing Configuration
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres
TEST_SUPABASE_URL=http://localhost:54321
TEST_SUPABASE_SERVICE_KEY=your-test-service-role-key

# Mock Service Keys (for testing)
MOCK_TWILIO_ENABLED=false
MOCK_OPENAI_ENABLED=false
MOCK_EMAIL_ENABLED=false

# ==============================================================================
# PRODUCTION OVERRIDES
# ==============================================================================

# Production-specific settings (uncomment for production)
# NODE_ENV=production
# NEXT_PUBLIC_ENVIRONMENT=production
# LOG_LEVEL=warn
# RATE_LIMIT_MAX=1000

# Production Security
# FORCE_HTTPS=true
# SECURE_COOKIES=true
# CSRF_PROTECTION=true

# Production Performance
# ENABLE_CDN=true
# ENABLE_COMPRESSION=true
# CACHE_MAX_AGE=86400

# ==============================================================================
# OPTIONAL INTEGRATIONS
# ==============================================================================

# SMS Integration (Twilio)
ENABLE_SMS_NOTIFICATIONS=false
SMS_FROM_NUMBER=+1234567890

# Slack Integration (for team notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SLACK_CHANNEL=#flynn-notifications

# Zapier Integration
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your-zapier-hook

# ==============================================================================
# INDUSTRY-SPECIFIC CONFIGURATIONS
# ==============================================================================

# Default Industry Settings
DEFAULT_INDUSTRY=general_services
DEFAULT_EVENT_DURATION=60
DEFAULT_BUSINESS_START=09:00
DEFAULT_BUSINESS_END=17:00

# Plumbing Industry
PLUMBING_EMERGENCY_KEYWORDS=flooding,burst,no water,no heat
PLUMBING_DEFAULT_DURATION=90

# Real Estate Industry
REAL_ESTATE_MLS_API_KEY=your-mls-api-key
REAL_ESTATE_ZILLOW_API_KEY=your-zillow-api-key

# Medical Industry
ENABLE_HIPAA_COMPLIANCE=true
MEDICAL_REMINDER_ADVANCE_HOURS=24

# Legal Industry
LEGAL_BILLING_RATE_DEFAULT=300
ENABLE_CONFLICT_CHECKING=true

# ==============================================================================
# CACHE CONFIGURATION
# ==============================================================================

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Cache Settings
CACHE_TTL=3600
ENABLE_QUERY_CACHE=true
ENABLE_RESPONSE_CACHE=true

# ==============================================================================
# FILE STORAGE CONFIGURATION
# ==============================================================================

# Supabase Storage
SUPABASE_STORAGE_BUCKET=flynn-storage
MAX_FILE_SIZE=10485760

# AWS S3 (Alternative storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=flynn-ai-storage

# ==============================================================================
# ANALYTICS CONFIGURATION
# ==============================================================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ==============================================================================
# SOCIAL AUTHENTICATION (Optional)
# ==============================================================================

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ==============================================================================
# API KEYS FOR EXTERNAL SERVICES
# ==============================================================================

# Weather API (for scheduling considerations)
WEATHER_API_KEY=your-weather-api-key

# Maps API (for location services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Timezone API
TIMEZONE_API_KEY=your-timezone-api-key

# ==============================================================================
# BACKUP AND RECOVERY
# ==============================================================================

# Database Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=flynn-ai-backups

# ==============================================================================
# COMPLIANCE AND GOVERNANCE
# ==============================================================================

# Data Retention Policies
DATA_RETENTION_DAYS=2555
CALL_RECORDING_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=2555

# Privacy Settings
ENABLE_GDPR_COMPLIANCE=true
ENABLE_CCPA_COMPLIANCE=true
ALLOW_DATA_EXPORT=true
ALLOW_DATA_DELETION=true

# ==============================================================================
# NOTES AND INSTRUCTIONS
# ==============================================================================

# SETUP INSTRUCTIONS:
# 1. Copy this file to .env.local
# 2. Replace all placeholder values with your actual API keys and configuration
# 3. Ensure sensitive keys are kept secure and never committed to version control
# 4. For production, use environment-specific values and secure secret management
# 5. Test all integrations in development before deploying to production

# REQUIRED FOR BASIC FUNCTIONALITY:
# - NEXT_PUBLIC_SUPABASE_URL
# - NEXT_PUBLIC_SUPABASE_ANON_KEY
# - SUPABASE_SERVICE_ROLE_KEY
# - OPENAI_API_KEY
# - TWILIO_ACCOUNT_SID
# - TWILIO_AUTH_TOKEN
# - RESEND_API_KEY

# OPTIONAL FOR ENHANCED FEATURES:
# - Google/Microsoft calendar integration keys
# - Stripe keys for subscription management
# - Monitoring and analytics keys
# - Additional industry-specific APIs